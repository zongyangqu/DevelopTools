<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/gold_svip_tag_text"
    android:padding="10dp">

    <ImageView
        android:id="@+id/iv_item_lv"
        android:layout_width="70dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        android:src="@mipmap/watermelon_pic"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_height="70dp" />

    <TextView
        android:id="@+id/tv_item_lv"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:text="西瓜"
        android:layout_marginTop="5dp"
        android:textStyle="bold"
        android:textColor="#333333"
        android:singleLine="true"
        android:ellipsize="end"
        app:layout_constraintLeft_toLeftOf="@+id/iv_item_lv"
        app:layout_constraintRight_toRightOf="@+id/iv_item_lv"
        app:layout_constraintTop_toBottomOf="@+id/iv_item_lv"
        android:textSize="12dp" />

</androidx.constraintlayout.widget.ConstraintLayout>