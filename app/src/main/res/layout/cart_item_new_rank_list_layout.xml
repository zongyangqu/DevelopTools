<?xml version="1.0" encoding="utf-8"?>
<com.coding.qzy.baselibrary.widget.roundview.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/round_radius_second_level"
    app:round_corner="@dimen/round_radius_third_level"
    tools:background="@color/themeColor"
    tools:layout_width="171dp">


    <ImageView
        android:id="@+id/iv_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:scaleType="fitXY"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="18dp"
        android:maxWidth="145dp"
        android:maxLines="1"
        android:textColor="@color/subMediumBlackColor"
        android:textSize="@dimen/textsize_18"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="时令水果热销榜" />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/round_radius_first_level"
        android:layout_marginTop="@dimen/round_radius_second_level"
        android:layout_marginEnd="@dimen/round_radius_first_level"
        android:paddingBottom="@dimen/round_radius_second_level"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_title">

        <com.coding.qzy.baselibrary.widget.roundview.RoundConstraintLayout
            android:id="@+id/rl_container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintTop_toTopOf="parent"
            app:round_corner="@dimen/round_radius_first_level">

            <ImageView
                android:id="@+id/ivTopProduct"
                android:layout_width="match_parent"
                android:layout_height="162dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:id="@+id/ivTopLabel"
                android:layout_width="22dp"
                android:layout_height="26dp"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />
        </com.coding.qzy.baselibrary.widget.roundview.RoundConstraintLayout>

        <com.quzy.coding.util.widget.CartRankListViewProductSwitcher
            android:id="@+id/productSwitcher"
            android:layout_marginTop="4dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toBottomOf="@+id/rl_container"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.coding.qzy.baselibrary.widget.roundview.RoundConstraintLayout>