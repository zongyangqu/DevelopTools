<?xml version="1.0" encoding="utf-8"?>
<com.coding.qzy.baselibrary.widget.roundview.RoundConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cl_common_banner_content"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginStart="6dp"
    android:layout_marginTop="0dp"
    android:layout_marginEnd="6dp"
    android:layout_marginBottom="9dp"
    android:background="@color/white"
    android:paddingBottom="@dimen/round_radius_second_level"
    app:round_corner="@dimen/round_radius_third_level">



    <ImageView
        android:id="@+id/iv_product"
        android:layout_width="110dp"
        android:layout_height="110dp"
        android:layout_marginStart="@dimen/round_radius_second_level"
        android:layout_marginTop="@dimen/round_radius_second_level"
        android:src="@mipmap/cat"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/tv_title"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/round_radius_second_level"
        android:layout_marginTop="@dimen/round_radius_second_level"
        android:layout_marginEnd="@dimen/round_radius_third_level"
        android:ellipsize="end"
        android:lineSpacingMultiplier="0.98"
        android:maxLines="2"
        android:textColor="@color/subMediumBlackColor"
        android:textSize="14sp"
        android:textStyle="bold"
        app:layout_constraintLeft_toRightOf="@+id/iv_product"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:text="智利新鲜车厘子1盒装标题支" />

    <TextView
        android:id="@+id/textTags"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="@dimen/round_radius_third_level"
        android:layout_marginTop="2dp"
        android:gravity="center_vertical"
        android:includeFontPadding="false"
        android:textColor="@color/subLightBlackColor"
        android:textSize="@dimen/textsize_12"
        android:ellipsize="end"
        android:singleLine="true"
        app:layout_constraintLeft_toLeftOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/tv_title"
        app:layout_constraintRight_toRightOf="parent"
        tools:text="酸甜适中 | 果汁丰富 酸甜适中| 果汁丰富 酸甜适中"/>

    <LinearLayout
        android:id="@+id/subLine"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="@id/tv_title"
        app:layout_constraintStart_toStartOf="@id/tv_title"
        app:layout_constraintTop_toBottomOf="@id/textTags">


        <RelativeLayout
            android:id="@+id/ll_tips_sub_title"
            android:layout_width="90dp"
            android:layout_height="14dp"
            android:layout_marginEnd="6dp">

            <ProgressBar
                android:id="@+id/item_sec_kill_tips_progress_bar"
                style="@android:style/Widget.ProgressBar.Horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:max="100"
                android:progress="50"
                android:progressDrawable="@drawable/prd_sec_kill_progress_bar" />

            <TextView
                android:id="@+id/item_sek_kill_tips_sub_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="#FF1A34"
                android:textSize="@dimen/textsize_10"
                android:text="剩余45%" />
        </RelativeLayout>
    </LinearLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/item_sek_kill_tips_container"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="9dp"
        android:clipChildren="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="@+id/tv_title"
        app:layout_constraintTop_toBottomOf="@+id/subLine"
        app:layout_goneMarginTop="16dp">

        <ImageView
            android:id="@+id/discountImg"
            android:layout_width="132dp"
            android:layout_height="25dp"
            android:layout_marginTop="9dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/discountTv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="3dp"
            android:gravity="top|center_horizontal"
            android:paddingStart="3dp"
            android:paddingEnd="3dp"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_12"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="@id/discountImg"
            app:layout_constraintStart_toStartOf="@id/discountImg"
            app:layout_constraintTop_toTopOf="parent"
            android:text="秒杀价"
            tools:textColor="@color/black"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/tv_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textSize="@dimen/textsize_22"
            app:layout_constraintEnd_toEndOf="@id/discountImg"
            app:layout_constraintStart_toStartOf="@id/discountImg"
            app:layout_constraintTop_toBottomOf="@id/discountImg"
            android:text="56.12"
            android:textColor="@color/themeColor" />

        <TextView
            android:id="@+id/tv_original_price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:includeFontPadding="false"
            android:textColor="#cccccc"
            android:textSize="@dimen/textsize_12"
            app:layout_constraintBottom_toBottomOf="@id/discountImg"
            app:layout_constraintStart_toStartOf="@id/discountImg"
            android:text="￥60" />

        <TextView
            android:id="@+id/tv_hite"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="3dp"
            android:includeFontPadding="false"
            android:text="秒杀价已抢完"
            android:textColor="@color/subRegularBlackColor"
            android:textSize="10sp"
            android:visibility="invisible"
            app:layout_constraintBottom_toTopOf="@id/ctl_sec_kill_tips_right_info"
            app:layout_constraintEnd_toEndOf="@id/ctl_sec_kill_tips_right_info"
            app:layout_constraintStart_toStartOf="@id/ctl_sec_kill_tips_right_info"
            app:layout_constraintTop_toTopOf="parent" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_sec_kill_tips_right_info"
            android:layout_width="73dp"
            android:layout_height="34dp"
            android:layout_marginBottom="9dp"
            android:background="@drawable/sec_kill_tab_bg"
            android:paddingTop="1dp"
            android:paddingBottom="1dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <TextView
                android:id="@+id/item_sek_kill_tips_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:includeFontPadding="false"
                android:textColor="@color/white"
                android:textSize="@dimen/textsize_14"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:text="马上抢"/>

        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/cart_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="0dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:paddingLeft="3dp"
            android:paddingRight="3dp"
            android:text="2"
            android:textColor="@color/white"
            android:textSize="@dimen/textsize_10"
            android:visibility="visible"
            app:layout_constraintBottom_toBottomOf="@+id/ctl_sec_kill_tips_right_info"
            app:layout_constraintRight_toRightOf="parent"
            tools:visibility="visible" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</com.coding.qzy.baselibrary.widget.roundview.RoundConstraintLayout>
