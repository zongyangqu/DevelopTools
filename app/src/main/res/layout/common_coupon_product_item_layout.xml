<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <com.coding.qzy.baselibrary.widget.roundview.RoundRelativeLayout
        android:layout_width="64dp"
        android:layout_height="64dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:round_corner="@dimen/round_radius_second_level"
        android:background="@color/white">


        <ImageView
            android:id="@+id/product_newcustomer_img"
            android:layout_width="54dp"
            android:layout_height="45dp"
            android:layout_centerInParent="true"
            tools:background="@color/themeColor" />

        <com.coding.qzy.baselibrary.widget.roundview.RoundTextView
            android:id="@+id/tv_newcustomer_title"
            android:layout_width="64dp"
            android:layout_height="14dp"
            android:background="#908D561C"
            android:gravity="center"
            android:maxLines="1"
            android:text="新人专享新人专享新人专享"
            android:textColor="@color/white"
            android:textSize="10sp"
            android:visibility="gone"
            tools:visibility="visible"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:round_corner_top_left="@dimen/round_radius_second_level"
            app:round_corner_top_right="@dimen/round_radius_second_level" />

        <TextView
            android:id="@+id/tv_sell_out"
            android:layout_width="49dp"
            android:layout_height="22dp"
            android:background="@drawable/bg_no_stock"
            android:gravity="center"
            android:text="补货中"
            android:textColor="@color/white"
            android:textSize="12sp"
            android:visibility="gone"
            android:layout_centerInParent="true"
            tools:visibility="visible" />
    </com.coding.qzy.baselibrary.widget.roundview.RoundRelativeLayout>




</androidx.constraintlayout.widget.ConstraintLayout>