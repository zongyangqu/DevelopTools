<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginLeft="12dp"
    android:layout_marginRight="12dp"
    app:layout_constraintLeft_toLeftOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:bl_corners_radius="9dp"
    tools:layout_height="160dp"
    tools:layout_width="351dp"
    tools:ignore="MissingPrefix">



    <com.shehuan.niv.NiceImageView
        android:id="@+id/iv_double_eleven_bg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:src="@mipmap/icon_common_ads_placeholder"
        android:scaleType="centerCrop"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintDimensionRatio="w, 1:2.19"
        app:corner_radius="9dp"
         />

    <com.shehuan.niv.NiceImageView
        android:id="@+id/iv_double_eleven_left"
        android:layout_width="0dp"
        android:layout_height="60dp"
        android:scaleType="centerCrop"
        android:src="@mipmap/icon_common_ads_placeholder"
        app:layout_constraintRight_toLeftOf="@+id/iv_double_eleven_right"
        app:layout_constraintBottom_toBottomOf="@+id/iv_double_eleven_bg"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintLeft_toLeftOf="@+id/iv_double_eleven_bg"
        android:layout_marginBottom="5dp"
        android:layout_marginStart="6dp"
        app:corner_radius="9dp"
        />

    <com.shehuan.niv.NiceImageView
        android:id="@+id/iv_double_eleven_right"
        android:layout_width="0dp"
        android:layout_height="60dp"
        app:corner_radius="9dp"
        app:layout_constraintLeft_toRightOf="@+id/iv_double_eleven_left"
        android:src="@mipmap/icon_common_ads_placeholder"
        android:scaleType="centerCrop"
        android:layout_marginStart="7dp"
        app:layout_constraintBottom_toBottomOf="@+id/iv_double_eleven_bg"
        android:layout_marginEnd="6dp"
        app:layout_constraintHorizontal_weight="1"
        app:layout_constraintRight_toRightOf="@+id/iv_double_eleven_bg"
        android:layout_marginBottom="5dp"/>


</androidx.constraintlayout.widget.ConstraintLayout>