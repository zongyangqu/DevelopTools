<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="55dp"
    android:orientation="vertical"
    android:paddingLeft="3dp"
    android:paddingRight="3dp">

    <FrameLayout
        android:id="@+id/nvabar_icon_layout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:layout_marginTop="5dp">

        <ImageView
            android:id="@+id/navbar_icon"
            android:layout_width="27dp"
            android:layout_height="27dp"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:layout_marginTop="1dp"
            android:layout_marginRight="5dp"
            android:layout_marginBottom="1dp"
            tools:src="@drawable/member_selected" />

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/navbar_badge"
            android:textColor="@color/white"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_badge_circle_white_border"
            android:gravity="center"
            android:minWidth="16dp"
            android:textSize="@dimen/textsize_12"
            android:visibility="gone"
            tools:text="6" />

        <com.quzy.coding.util.widget.IconFont
            android:id="@+id/navbar_badge_font"
            style="@style/BadgeText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="top|end"
            android:background="@drawable/bg_badge_circle_white_border"
            android:gravity="center"
            android:minWidth="16dp"
            android:textSize="@dimen/textsize_10"
            android:text="@string/icon_more"
            android:visibility="gone" />

        <View
            android:id="@+id/circle_badge"
            android:layout_width="3dp"
            android:layout_height="3dp"
            android:layout_gravity="top|end"
            android:layout_marginEnd="5dp"
            android:layout_marginTop="3dp"
            android:background="@drawable/bg_badge_circle"
            android:visibility="gone"
            tools:visibility="visible" />

    </FrameLayout>

    <TextView
        android:id="@+id/navbar_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/nvabar_icon_layout"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="5dp"
        android:gravity="center"
        android:includeFontPadding="false"
        android:lines="1"
        android:scaleX="@dimen/fixed_label_active_to_inactive_ratio"
        android:scaleY="@dimen/fixed_label_active_to_inactive_ratio"
        android:textSize="12sp"
        tools:text="会员中心"
        tools:textColor="@color/subRegularBlackColor" />

    <com.quzy.coding.ui.widget.bottomnavigationbar.HomeBottomView
        android:id="@+id/home_bottom_view"
        android:layout_width="wrap_content"
        android:layout_height="55dp"
        android:layout_centerHorizontal="true"
        android:layout_gravity="center_horizontal|top"
        android:visibility="gone" />

</RelativeLayout>