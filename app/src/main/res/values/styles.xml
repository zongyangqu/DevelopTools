<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!--闪屏页-->
    <style name="SplashTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:windowBackground">@mipmap/splash</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">true</item>
    </style>

 <!--   <layer-list xmlns:android="http://schemas.android.com/apk/res/android">
        <item>
            <bitmap
                android:gravity="fill"
                android:src="@mipmap/splash" />
        </item>
    </layer-list>-->

    <style name="test">
        <item name="bl_corners_radius">20dp</item>
        <item name="bl_gradient_angle">270</item>
        <item name="bl_gradient_startColor">@android:color/holo_blue_bright</item>
        <item name="bl_gradient_endColor">@android:color/holo_blue_dark</item>
        <item name="bl_ripple_enable">true</item>
        <item name="bl_ripple_color">@android:color/holo_blue_light</item>
    </style>

    <style name="MyDialogStyleBottom" parent="Theme.AppCompat.Dialog">
        <item name="android:windowAnimationStyle">@style/BottomDialogAnimation</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">false</item>
        <!-- 半透明 -->
        <item name="android:windowIsTranslucent">true</item>
        <!-- 无标题 -->
        <item name="android:windowNoTitle">true</item>
        <!-- 背景透明 -->
        <item name="android:windowBackground">@android:color/transparent</item>
        <!-- 是否允许对话框的背景变暗 -->
        <item name="android:backgroundDimEnabled">true</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowCloseOnTouchOutside">true</item>
    </style>

    <style name="BottomDialogAnimation">
        <item name="android:windowEnterAnimation">@anim/dialog_slid_up</item>
        <item name="android:windowExitAnimation">@anim/dialog_slid_down</item>
    </style>

    <style name="TablayoutStyle">
        <item name="tabSelectedTextColor">@color/themeColor</item>
        <item name="tabIndicatorColor">@color/themeColor</item>
        <item name="tabGravity">center</item>
        <item name="tabMode">scrollable</item>
    </style>

    <style name="TabLayoutTextStyleAppearance" parent="TabLayoutTextAppearance">
        <item name="android:textColor">@color/subMediumBlackColor</item>
        <item name="android:textStyle">bold</item>
    </style>
    <style name="TabLayoutTextAppearance" parent="TextAppearance.AppCompat">
        <item name="android:textColor">@color/subRegularBlackColor</item>
        <item name="android:alpha">0.54</item>
        <item name="android:textStyle">normal</item>
        <item name="android:textSize">@dimen/textsize_14</item>
    </style>

    <style name="loading_dialog" parent="@android:style/Theme.Dialog">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowIsTranslucent">true</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:windowFrame">@null</item>
        <item name="android:windowIsFloating">true</item>
        <item name="android:windowContentOverlay">@null</item>
        <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
        <item name="android:windowSoftInputMode">stateUnspecified|adjustPan</item>
    </style>

    <style name="BackBtnStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/textsize_16</item>
        <item name="android:paddingStart">15dp</item>
        <item name="android:paddingEnd">30dp</item>
        <item name="android:text">@string/icon_back_left</item>
        <item name="android:textColor">@color/subMediumBlackColor</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="ToolBarStyle" parent="Base.Widget.AppCompat.Toolbar">
        <item name="android:layout_width">match_parent</item>
        <item name="titleTextAppearance">@style/ToolbarTitleTextStyle</item>
        <item name="android:layout_height">52dp</item>
        <item name="popupTheme">@style/ThemeOverlay.AppCompat.Light</item>
        <item name="android:minHeight">52dp</item>
        <item name="elevation">0dp</item>
        <item name="contentInsetEnd">0dp</item>
        <item name="contentInsetStartWithNavigation">0dp</item>
    </style>
    <style name="ToolbarTitleTextStyle" parent="@style/TextAppearance.AppCompat"/>
    <style name="BadgeText">
        <item name="android:textSize">11sp</item>
        <item name="android:includeFontPadding">false</item>
        <item name="android:maxLines">1</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:paddingRight">4dp</item>
        <item name="android:paddingLeft">4dp</item>
        <item name="android:paddingBottom">1dp</item>
        <item name="android:paddingTop">1dp</item>
        <item name="android:visibility">gone</item>
    </style>

    <style name="MemberAndPayCodeTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="colorAccent">@color/themeColor</item>
        <item name="colorControlActivated">@color/themeColor</item>
    </style>

</resources>
